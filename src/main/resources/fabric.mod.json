{
  "schemaVersion": 1,
  "id": "hardcodepatcher",
  "version": "${version}",
  "name": "HardcodeTextPatcher",
  "description": "Fixed the hard coded local string problem in some mods.",
  "authors": [
    "FengMing, teddyxlandlee"
  ],
  "contact": {
    "homepage": "https://fabricmc.net/",
    "sources": "https://github.com/FabricMC/fabric-example-mod"
  },

  "license": "GPLv3.0",
  "icon": "icon.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "org.localmc.tools.hardcodepatcher.HardcodeTextPatcher"
    ]
  },
  "mixins": [
    "hardcodepatcher.mixins.json"
  ],

  "depends": {
    "fabricloader": ">=0.14.6",
    "fabric": "*",
    "minecraft": "1.18.x",
    "java": ">=17"
  },
  "suggests": {
    "another-mod": "*"
  }
